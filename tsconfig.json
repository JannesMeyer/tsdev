{
    "compilerOptions": {
		"incremental": true,
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
        "target": "ES2020",
        "module": "ES2020"
    },
    "exclude": ["src"]
}
